<div class="container">
  <%= render 'shared/errors', obj: @category %>

  <div class="row justify-content-center bg-success p-2 text-dark bg-opacity-10 rounded pt-4">
    <div class="col-10">
      <%= form_with(model: @category, local: true) do |f| %>
        <div class="form-group row mb-2">
          <%= f.label :name, "Category name", class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <div class="d-flex justify-content-center">
            <%= f.submit class: "btn btn-outline-primary btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>