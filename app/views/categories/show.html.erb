<h1 class="text-center mt-4">Category: <%= @category.name %></h1>
<% if logged_in? && current_user.admin? %>
<div class="text-center mt-4">
  <%= link_to "Edit category name", edit_category_path(@category), {:class => "btn btn-outline-primary"} %>
</div>
<% end %>

<h5 class="text-center mt-4">Articles</h5>

<%= render 'articles/partials/article' %>

<div class="apple_pagination mt-4 mb-4">
  <%= will_paginate @articles, :container => false %>
</div>