<div class="container">
  <%= render 'shared/errors', obj: @article%>

  <div class="row justify-content-center bg-success p-2 text-dark bg-opacity-10 rounded">
    <div class="col-10">
      <%= form_with(model: @article, local: true) do |f| %>
        <div class="form-group row mb-2">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mb-2">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mb-2">
          <%= f.label :category, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.collection_select :category_ids, Category.all, :id, :name, {:multiple => true, size:3}, {:class => "form-select shadow rounded"} %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <div class="d-flex justify-content-between">
            <%= f.submit class: "btn btn-outline-primary"%>
            <%= link_to 'Return to articles listing', articles_path, {:class => "btn btn-outline-primary"} %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>